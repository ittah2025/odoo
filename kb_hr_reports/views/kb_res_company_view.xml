<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_company_form_id">
            <field name="name">res.company.doc.inherits</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']/.." position="after">
                    <group>
                        <group>
                            <field name="kb_userName" string="Representative"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
